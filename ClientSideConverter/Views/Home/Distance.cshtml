@{
    ViewBag.Title = "Distance";
}
<h2>Distance</h2>

<div class="clearfix">

    <div class="col-xs-12 convertconainer">
        <p class="fromtext">Convert From:</p>
        <select id="FromSelect">
            <option value="cm">Centimeter (cm)</option>
            <option value="dm">Dekameter (dm)</option>
            <option value="ft">Foot (ft)</option>
            <option value="furlong">Furlong</option>
            <option value="hectometer">Hectometer (hm)</option>
            <option value="in">Inch (in)</option>
            <option value="km">Kilometer (km)</option>
            <option value="lightyear">Lightyear</option>
            <option value="m">Meter (m)</option>
            <option value="micrometer">Micrometer (µm)</option>
            <option value="mil">Mil (mil)</option>
            <option value="mi">Mile (mi)</option>
            <option value="mm">Millimeter (mm)</option>
            <option value="nm">Nanometer (nm)</option>
            <option value="M">Nautical Mile (M)</option>
            <option value="pc">Parsec (pc)</option>
            <option value="yd">Yard (yd)</option>
        </select>
        <p class="totext">To</p>
        <select id="ToSelect" class="fromselect">
            <option value="cm">Centimeter (cm)</option>
            <option value="dm">Dekameter (dm)</option>
            <option value="ft">Foot (ft)</option>
            <option value="furlong">Furlong</option>
            <option value="hectometer">Hectometer (hm)</option>
            <option value="in">Inch (in)</option>
            <option value="km">Kilometer (km)</option>
            <option value="lightyear">Lightyear</option>
            <option value="m">Meter (m)</option>
            <option value="micrometer">Micrometer (µm)</option>
            <option value="mil">Mil (mil)</option>
            <option value="mi">Mile (mi)</option>
            <option value="mm">Millimeter (mm)</option>
            <option value="nm">Nanometer (nm)</option>
            <option value="M">Nautical Mile (M)</option>
            <option value="pc">Parsec (pc)</option>
            <option value="yd">Yard (yd)</option>
        </select>
        <input type="text" id="UnitToConvert" autofocus />
        <button type="button" class="btn btn-success btn-xs converbtn" id="ConvertButton" data-conversion="distance">Convert</button>
    </div>

    <div class="col-xs-12 convertresultcontainer">
        <p>
            <span id="UserInputValue">1200</span>
            <span id="ConvertFromUnitDisplay">ms</span>
            =
            <span id="ResultValue">500</span>
            <span id="ConvertToUnitDisplay">ms</span>
        </p>
    </div>

</div>
@section Scripts{
    <script src="~/Scripts/Conversion.js"></script>
}