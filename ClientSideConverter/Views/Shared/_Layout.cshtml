<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Clientside Converter</title>
    @Styles.Render("~/Content/BootstrapCSS")
    @Styles.Render("~/Content/Main/MainCSS")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Clientside Converter", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Statistics", "Index", "Home")</li>
                    <li>@Html.ActionLink("Distance", "Distance", "Home")</li>
                    <li>@Html.ActionLink("Light", "Light", "Home")</li>
                    <li>@Html.ActionLink("Power", "Power", "Home")</li>
                    <li>@Html.ActionLink("Pressure", "Pressure", "Home")</li>
                    <li>@Html.ActionLink("Speed", "Speed", "Home")</li>
                    <li>@Html.ActionLink("Temperature", "Temperature", "Home")</li>
                    <li>@Html.ActionLink("Time", "Time", "Home")</li>
                    <li>@Html.ActionLink("Torque", "Torque", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Clientside Converter</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("scripts", required: false)
</body>
</html>