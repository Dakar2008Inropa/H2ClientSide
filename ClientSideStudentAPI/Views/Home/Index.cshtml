@{
    ViewBag.Title = "Elever";
}
<h1>Elever</h1>

<button type="button" class="btn btn-primary" id="AddStudentBtn">Opret Elev</button>

<table class="table table-striped" id="StudentTable">
    <thead>
        <tr>
            <th width="25%">Fornavn</th>
            <th width="25%">Efternavn</th>
            <th width="25%" class="text-center">Hold</th>
            <th width="25%" class="text-center">Funktioner</th>
        </tr>
    </thead>
    <tbody id="StudentTableBody">
        <tr>
            <td>Test</td>
            <td>Test2</td>
            <td class="text-center">
                <button class="btn btn-success btn-sm btn-inlineblock">Edit</button>
                <button class="btn btn-danger btn-sm btn-inlineblock">Delete</button>
            </td>
        </tr>
    </tbody>
</table>

<div class="modal fade" id="EditStudentModal" tabindex="-1" role="dialog" aria-labelledby="EditStudentModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="EditStudentModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="EditFirstname">Fornavn</label>
                        <input type="text" class="form-control" id="EditFirstname" placeholder="Fornavn" />
                    </div>
                    <div class="form-group">
                        <label for="EditLastname">Efternavn</label>
                        <input type="text" class="form-control" id="EditLastname" placeholder="Efternavn" />
                    </div>
                    <div class="form-group">
                        <label>Hold</label>
                        <select id="EditTeams" class="form-control">
                        </select>
                    </div>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th width="50%">Fag</th>
                                <th width="50%" class="text-center">Funktioner</th>
                            </tr>
                        </thead>
                        <tbody class="studentcoursestable">
                            <tr>
                                <td>Sex og Samfund</td>
                                <td class="text-center">
                                    <button class="btn btn-danger btn-sm btn-block">Fjern</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="panel-group" id="editcollapse" role="tablist" aria-multiselectable="true">
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="collapse-heading-one">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#editcollapse" href="#editcollapse-one" aria-expanded="false" aria-controls="collapse-one">
                                        Tilføj Fag
                                    </a>
                                </h4>
                            </div>
                            <div id="editcollapse-one" class="panel-collapse collapse" role="tabpanel" aria-labelledby="collapse-heading-one">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label for="AddCourseSelect">Vælg Fag</label>
                                        <select id="AddCourseSelect" class="form-control">
                                        </select>
                                    </div>
                                    <button type="button" class="btn btn-success btn-block" id="AddStudentCourseBtn">Tilføj Fag</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-inlineblock" data-dismiss="modal">Luk</button>
                <button type="button" class="btn btn-success btn-inlineblock" id="SaveStudentBtn">Gem</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AddStudentModal" tabindex="-1" role="dialog" aria-labelledby="AddStudentModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="AddStudentModalLabel">Opret Ny Elev</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="AddFirstname">Fornavn</label>
                        <input type="text" class="form-control" id="AddFirstname" placeholder="Fornavn" />
                    </div>
                    <div class="form-group">
                        <label for="AddLastname">Efternavn</label>
                        <input type="text" class="form-control" id="AddLastname" placeholder="Efternavn" />
                    </div>
                    <div class="form-group">
                        <label>Hold</label>
                        <select id="AddTeams" class="form-control">
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-inlineblock" data-dismiss="modal">Luk</button>
                <button type="button" class="btn btn-success btn-inlineblock" id="AddNewStudentBtn">Opret</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Scripts/Students.js"></script>
}